<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section class="user-side">
      <h1>
        <%= image_tag(@user.avatar) %>
        <%= @user.name %>
      </h1>
      <% @user ||= current_user %>
        <div class="stats">
          <a href="<%= following_user_path(@user) %>">
            <strong class="stat">
              <%= @user.followed_users.count %>
            </strong>
            following
          </a>
          <a href="<%= followers_user_path(@user) %>">
            <strong class="stat">
              <%= @user.followers.count %>
            </strong>
            followers
          </a>
        </div>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.events.any? %>
    <div class="microposts">
      <h3 style="text-align: center;">Events (<%= @user.events.count %>)</h3>
      <ol>
        <%= render @events %>
      </ol>
    <% end %>
    </div> 
  </div>
</div>